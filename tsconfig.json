{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src","types/custom.d.ts"],
    "exclude": ["node_modules"]
}
